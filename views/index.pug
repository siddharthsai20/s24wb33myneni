extends layout
 
block content
  h1= title
  h1 Siddarth sai myneni
  p Welcome back<br>
   
  button(type="button", class="btn btn-success", onclick="boost()") Click me
  div(id="boost") Add in extra.
 
  script.
    let value = 0;
    let amt = 3;
   
    function boost() {
      amt += 1;
      value += amt;
      document.getElementById("boost").innerText = `Boosted ${value} by ${amt}.`;
    }